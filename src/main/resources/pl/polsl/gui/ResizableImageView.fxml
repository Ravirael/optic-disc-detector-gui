<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="CENTER" prefHeight="480" prefWidth="720" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <Slider fx:id="slider" blockIncrement="1.0" majorTickUnit="1.0" max="1000.0" min="1.0" minorTickCount="1"
            orientation="VERTICAL" value="100.0"/>
    <ScrollPane fx:id="imageScrollPane" fitToHeight="true" fitToWidth="true" pannable="true" prefHeight="10000.0"
                prefWidth="10000.0">
        <content>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
             <children>
                 <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true"/>
             </children>
         </HBox>
        </content>
    </ScrollPane>
</fx:root>
